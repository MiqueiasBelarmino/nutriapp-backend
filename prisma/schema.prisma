generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  name          String
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  Patients      Patient[]      @relation("CreatedPatients")
  PatientUsers  Patient[]      @relation("patientUser")
  Consultations Consultation[]
  MealPlans     MealPlan[]

  @@map("users")
}

model Patient {
  id            String         @id @default(uuid())
  name          String
  gender        String
  birthDate     DateTime       @map("birth_date") @db.Date
  weight        Float
  height        Float
  userId        String?
  user          User?          @relation("patientUser", fields: [userId], references: [id])
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  email         String?        @unique
  phone         String?
  createdBy     String?        @map("created_by")
  UserCreator   User?          @relation("CreatedPatients", fields: [createdBy], references: [id])
  Consultations Consultation[]
  MealPlans     MealPlan[]

  @@map("patients")
}

model Consultation {
  id          String   @id @default(uuid())
  patientId   String   @map("patient_id")
  date        DateTime
  weight      Float
  triceps     Float
  subscapular Float
  suprailiac  Float
  abdominal   Float
  waistCirc   Float    @map("waist_circ")
  abdomenCirc Float    @map("abdomen_circ")
  fatFormula  String   @map("fat_formula")
  fatPercent  Float    @map("fat_percent")
  leanMass    Float    @map("lean_mass")
  fatMass     Float    @map("fat_mass")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdBy   String?  @map("created_by")
  UserCreator User?    @relation(fields: [createdBy], references: [id])
  patient     Patient  @relation(fields: [patientId], references: [id])

  @@map("consultations")
}

model MealPlan {
  id          String   @id @default(uuid())
  patientId   String   @map("patient_id")
  date        DateTime
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdBy   String?  @map("created_by")
  content   String?

  patient     Patient  @relation(fields: [patientId], references: [id])
  UserCreator User?    @relation(fields: [createdBy], references: [id])
  Meal        Meal[]

  @@map("meal_plans")
}

model Meal {
  id         String @id @default(uuid())
  mealPlanId String @map("meal_plan_id")
  name       String
  order      Int?

  mealPlan MealPlan   @relation(fields: [mealPlanId], references: [id])
  items    MealItem[]

  @@map("meals")
}

model MealItem {
  id       String  @id @default(uuid())
  mealId   String  @map("meal_id")
  foodName String  @map("food_name")
  quantity String?
  notes    String?

  meal        Meal             @relation(fields: [mealId], references: [id])
  substitutes MealSubstitute[]

  @@map("meal_items")
}

model MealSubstitute {
  id       String  @id @default(uuid())
  itemId   String  @map("item_id")
  foodName String  @map("food_name")
  quantity String?
  notes    String?

  item MealItem @relation(fields: [itemId], references: [id])

  @@map("meal_substitutes")
}
